@import "../../node_modules/tracim_lib/src/css/Variable.styl"

backgroundrules()
  margin-bottom 50px
  border-radius 10px
  background-color off-white

title()
  margin-bottom 25px
  font-size 20px
  font-weight 400

label()
  font-weight 500
  font-size 18px
  color blue

coloricon()
  .fa-gavel
    color responsable
  .fa-graduation-cap
    color gestionnaire
  .fa-pencil
    color contributeur
  .fa-eye
    color lecteur

.appdashboard
  width 760px
  &__content
    padding 10px
    width 100%
    overflow-y auto
    &__description
      backgroundrules()
      padding 10px
      &__text
        margin-bottom 15px
        & > textarea
          width 100%
          min-height 150px
    &__userlist
      backgroundrules()
      position relative
      &__title
        title()
        padding 10px 0 0 10px
      &__list
        margin 0
        padding 0
        height 300px
        overflow-y auto
        list-style none
        &__item
          display flex
          align-items center
          border-top 1px solid grey
          padding 10px
          &__role
            coloricon()
            .btndropdown
              display flex
              align-items center
              border none
              padding 10px
              width 250px
              background-color transparent
              cursor pointer
              &:hover > .btndropdown__text
                border-bottom 1px solid blue
                padding-bottom 3px
              ::after
                display flex
                justify-content flex-end
            .subdropdown
              padding 0
              width 250px
              &__item
                display flex
                align-items center
                padding 10px
                &__icon
                  margin-right 15px
          &__delete
            font-size 20px
            cursor pointer
            &:hover
              color blue
      &__adduser
        border-top 1px solid grey
        padding 20px
        &__button
          display flex
          align-items center
          &__avatar
            display flex
            justify-content center
            align-items center
            margin-right 20px
            border 2px dashed grey
            border-radius 50%
            width 50px
            height 50px
            cursor pointer
            &__icon
              color grey
              font-size 25px
          &__text
            font-size 18px
            color blue
            cursor pointer
      &__form
        padding 15px
        flex-direction column
        height 100%
        width 100%
        background-color off-white
        &__close
          font-size 20px
          cursor pointer
        &__member
          &__name
            .name__label
              margin 30px 0 20px 0
              label()
            .name__input
              margin-bottom 20px
              border 1px solid grey
              border-radius 10px
              padding 10px
              width 300px
          &__create
            display flex
            align-items center
            margin 15px 0
        &__role
          margin-bottom 15px
          coloricon()
          &__text
            margin 15px 0
            label()
          &__list
            margin 0
            padding 0
            list-style none
            &__item
              display flex
              align-items center
              margin 10px 25px 10px 0
              .item
                &__text
                  display flex
        &__submitbtn
          display flex
          justify-content flex-end
          & > button
            padding 8px 30px
            cursor pointer
    &__functionality
      backgroundrules()
      &__title
        title()
        padding 10px
      &__text
        margin-bottom 20px
        padding-left 10px
      &__list
        margin 0
        padding 0
        list-style none
        &__item
          display flex
          align-items center
          justify-content space-between
          margin-bottom 20px
          padding 5px 10px
          width 100%
          &:hover
            color off-white
            background-color blue
          &__text
            font-size 18px

/**** MEDIA QUERIES ****/

@media (min-width: min-sm) and (max-width: max-sm)

  .appdashboard
    width 100%

@media (max-width: max-xs)

  .appdashboard
    width 100%
    &__content
      padding 10px 0
      &__userlist
        &__list
          &__item
            flex-wrap wrap
            &__role
              margin-left 7px
              .btndropdown
                &:focus
                  outline none
            &__delete
              display none
        &__form
          &__role
            margin-bottom 0
            &__list
              display block
      &__functionality__list
        &__item
          display block
          .item__text
            margin-bottom 15px

